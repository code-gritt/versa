{
    "compilerOptions": {
        /* Core settings */
        "target": "ES2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "allowJs": true,
        "resolveJsonModule": true,
        "incremental": true,

        /* Type safety */
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,

        /* Next.js plugin */
        "plugins": [{ "name": "next" }],

        /* Path aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "next.config.ts"
    ],
    "exclude": ["node_modules"]
}
